{
  "name": "dataspace-connect-root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "npm install && npm run build -w packages/common",
    "dev": "concurrently -n \"api,web\" -c \"blue,green\" \"npm run dev -w packages/api\" \"npm run dev -w packages/web\"",
    "build:common": "npm run build -w packages/common",
    "build": "npm run build --workspaces",
    "test": "npm test --workspaces",
    "mobile:sync": "npm run build -w packages/web && npx cap sync ios",
    "mobile:open": "npx cap open ios"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.2",
    "@capacitor/cli": "^8.0.2",
    "@capacitor/core": "^8.0.2",
    "@capacitor/ios": "^8.0.2",
    "@prisma/client": "^6.19.2"
  }
}
